//#include "GlobalDefine.h"

#ifndef _GlobalDefine_H
#define _GlobalDefine_H

//定义LED引脚
#defien led1				PORTA | BIT(0)	//定义PA0引脚为led1输出位
#defien led2				PORTA | BIT(1)	//定义PA1引脚为led2输出位
#defien led3				PORTA | BIT(2)	//定义PA2引脚为led3输出位
#defien led4				PORTA | BIT(3)	//定义PA3引脚为led4输出位

//定义LCD引脚
#define lcd_busy			PINA & BIT(4)	//定义PA4引脚为lcd_busy输入位
#define lcd_rx				PORTE.1			//定义PE1引脚为lcd_rx输出位
#define lcd_tx				PORTE.0			//定义PE0引脚为lcd_tx输出位

//定义指纹模块引脚
#define fingerprint_rx		PORTD.3			//定义PD3引脚为fingerprint_rx输出位
#define fingerprint_tx		PORTD.2			//定义PD2引脚为fingerprint_tx输出位
#define fingerprint_power	PORTA | BIT(7)	//定义PA7引脚为fingerprint_power输出位

//定义键盘模块引脚
#define keyboard_row1		PORTB | BIT(0)	//定义PB0引脚为keyboard_row1输出位
#define keyboard_row2		PORTB | BIT(1)	//定义PB1引脚为keyboard_row2输出位
#define keyboard_row3		PORTB | BIT(2)	//定义PB2引脚为keyboard_row3输出位
#define keyboard_row4		PORTB | BIT(3)	//定义PB3引脚为keyboard_row4输出位
#define keyboard_col1		PORTB | BIT(4)	//定义PB4引脚为keyboard_col1输出位
#define keyboard_col2		PORTB | BIT(5)	//定义PB5引脚为keyboard_col2输出位
#define keyboard_col3		PORTB | BIT(6)	//定义PB6引脚为keyboard_col3输出位
#define keyboard_col4		PORTB | BIT(7)	//定义PB7引脚为keyboard_col4输出位

#endif
