//#include "GlobalDefine.h"

#ifndef _GlobalDefine_H
#define _GlobalDefine_H

//定义LED引脚
#defien led1				PORTA | BIT(0)	//定义PA0引脚为led1输出位
#defien led2				PORTA | BIT(1)	//定义PA1引脚为led2输出位
#defien led3				PORTA | BIT(2)	//定义PA2引脚为led3输出位
#defien led4				PORTA | BIT(3)	//定义PA3引脚为led4输出位

//定义LCD引脚
#define lcd_busy			PINA & BIT(4)	//定义PA4引脚为lcd_busy输入位
#define lcd_rx				PE1				//定义PE1引脚为lcd_rx位(作为引脚定义标志, 但不使用)
#define lcd_tx				PE0				//定义PE0引脚为lcd_tx位(作为引脚定义标志, 但不使用)

//定义指纹模块引脚
#define fingerprint_rx		PD3				//定义PD3引脚为fingerprint_rx位(作为引脚定义标志, 但不使用)
#define fingerprint_tx		PD2				//定义PD2引脚为fingerprint_tx位(作为引脚定义标志, 但不使用)
#define fingerprint_power	PORTA | BIT(7)	//定义PA7引脚为fingerprint_power输出位

//定义键盘模块引脚
#define keyboard_row1_o		PORTB | BIT(0)	//定义PB0引脚为keyboard_row1输出位
#define keyboard_row2_o		PORTB | BIT(1)	//定义PB1引脚为keyboard_row2输出位
#define keyboard_row3_o		PORTB | BIT(2)	//定义PB2引脚为keyboard_row3输出位
#define keyboard_row4_o		PORTB | BIT(3)	//定义PB3引脚为keyboard_row4输出位
#define keyboard_col1_o		PORTB | BIT(4)	//定义PB4引脚为keyboard_col1输出位
#define keyboard_col2_o		PORTB | BIT(5)	//定义PB5引脚为keyboard_col2输出位
#define keyboard_col3_o		PORTB | BIT(6)	//定义PB6引脚为keyboard_col3输出位
#define keyboard_col4_o		PORTB | BIT(7)	//定义PB7引脚为keyboard_col4输出位

#define keyboard_row1_i		PINB & BIT(0)	//定义PB0引脚为keyboard_row1输入位
#define keyboard_row2_i		PINB & BIT(1)	//定义PB1引脚为keyboard_row2输入位
#define keyboard_row3_i		PINB & BIT(2)	//定义PB2引脚为keyboard_row3输入位
#define keyboard_row4_i		PINB & BIT(3)	//定义PB3引脚为keyboard_row4输入位
#define keyboard_col1_i		PINB & BIT(4)	//定义PB4引脚为keyboard_col1输入位
#define keyboard_col2_i		PINB & BIT(5)	//定义PB5引脚为keyboard_col2输入位
#define keyboard_col3_i		PINB & BIT(6)	//定义PB6引脚为keyboard_col3输入位
#define keyboard_col4_i		PINB & BIT(7)	//定义PB7引脚为keyboard_col4输入位

void delay(unsigned char i);

#endif
