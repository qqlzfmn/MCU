#include "GlobalDefine.h"

//延时函数
void delay(unsigned char i)
{
	unsigned char j, k;
	
	for(i; i>0; i--)
		for(j=0xFF; j>0; j--)
			for(k=0xFF; k>0; k--);
}

//点亮LED
void led_on(unsigned char i) //点亮第几个LED
{
	switch(i)
	{
		case 1:
			DDRA  = 0x01;
			PORTA = 0x01;
			break;
		case 2:
			DDRA  = 0x02;
			PORTA = 0x02;
			break;
		case 3:
			DDRA  = 0x04;
			PORTA = 0x04;
			break;
		case 4:
			DDRA  = 0x08;
			PORTA = 0x08;
			break;
	}
}

