//LCD_Operate.c

#include <iom128v.h>
#include <macros.h>
#include "LCD_Operate.h"
#include "USART_Operate.h"
#include "GlobalDefine.h"

//LCD测忙
unsigned char LCD_Busy(void)
{
	if(lcd_busy)
		return 1;
	else
		return 0;
}

//LCD清屏
void LCD_Clear_Screen(unsigned char *color)
{
	USART0_Transmit_String("CLS(");
	USART0_Transmit_String(color);
	USART0_Transmit_String(");\r\n");
}

//LCD以size(值可以取12,16,24,32,48,64)大小, 以(x,y)为左上角起点, 以limitX为右侧终点, 用color颜色, 显示string
void LCD_Display(unsigned char *size, *x, *y, *string, *color, *limitX)
{
	USART0_Transmit_String("DS");
	USART0_Transmit_String(size);
	USART0_Transmit_String("(");
	USART0_Transmit_String(x);
	USART0_Transmit_String(",");
	USART0_Transmit_String(y);
	USART0_Transmit_String(",");
	USART0_Transmit_String(string);
	USART0_Transmit_String(",");
	USART0_Transmit_String(color);
	USART0_Transmit_String(",");
	USART0_Transmit_String(limitX);
	USART0_Transmit_String(");\r\n");
}