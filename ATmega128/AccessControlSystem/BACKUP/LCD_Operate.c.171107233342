//LCD测忙
unsigned char LCD_Busy(void)
{
	if(PINA & BIT(4))
		return 1;
	else
		return 0;
}

//LCD清屏
void LCD_Clear_Screen(unsigned char color)
{
	USART0_Transmit_String("CLS(");
	USART0_Transmit(color);
	USART0_Transmit_String(");\r\n");
}
